}

.view-all-btn:hover {
    color: #ffffff;
    transform: translateY(-1px);
}

.view-all-btn:active {
    box-shadow: inset 2px 2px 4px #15151a, inset -2px -2px 4px #27272e;
    transform: translateY(1px);
