    text-align: left;
    width: 100%;
    /* Create a pill shape effect */
    box-shadow: 4px 4px 10px #1e1e26, -4px -4px 10px #2c2c3a;
    border: 1px solid rgba(255, 255, 255, 0.02);
}

.recent-project-item:hover {
