    letter-spacing: 0.1em;
    color: #ffffff;
}

.section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--clay-bg-main);
    border-radius: 10px;
    color: var(--clay-accent);
    box-shadow: var(--clay-shadow-in);
}

.view-all-btn {
    padding: 8px 16px;
    background: var(--clay-bg-main);
    border: none;
    border-radius: 10px;
    color: var(--clay-text-muted);
    font-size: 11px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
