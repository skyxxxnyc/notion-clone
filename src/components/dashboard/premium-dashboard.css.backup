    border: 1px solid rgba(255, 255, 255, 0.02);
}

.template-card:hover {
    transform: translateY(-4px);
    box-shadow: 8px 8px 16px #1c1c24, -8px -8px 16px #2e2e3c;
}

.template-card svg {
    color: var(--clay-accent);
    /* Inset style for icons */
}

.solopreneur-card {
    background: linear-gradient(135deg, #2c2c3a, #252530);
    border: 1px solid rgba(255, 107, 107, 0.1);
}

.solopreneur-card svg {
    color: #ffaa00;
    /* Rocket color */
    filter: drop-shadow(0 0 5px rgba(255, 170, 0, 0.5));
}

.template-card span {
    font-size: 13px;
    font-weight: 600;
    color: #e5e5e5;
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px 24px;
    text-align: center;
    color: var(--clay-text-muted);
}

.empty-state svg {
    margin-bottom: 16px;
    opacity: 0.3;
}

.empty-state p {
    font-size: 14px;
    font-weight: 500;
    color: #a3a3a3;
    margin-bottom: 6px;
}

.empty-state span {
    font-size: 12px;
    color: #737373;
}

/* Responsive */
@media (max-width: 768px) {
    .dashboard {
        padding: 32px 24px;
    }

    .dashboard-title {
        font-size: 40px;
    }

    .ai-assistant-input-wrapper {
        flex-direction: column;
    }

    .ai-assistant-generate-btn {
        width: 100%;
        justify-content: center;
    }

    .favorite-modules,
    .templates-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }
}

/* Hero Section */
.dashboard-hero {
    margin-bottom: 48px;
}

.dashboard-title {
    font-size: 56px;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
    color: #e5e5e5;
    margin-bottom: 16px;
}

.dashboard-title-highlight {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.dashboard-subtitle {
    font-size: 15px;
    color: #a3a3a3;
    letter-spacing: 0.02em;
}

/* AI Assistant Card */
.ai-assistant-card {
    background: rgba(23, 23, 23, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 48px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

.ai-assistant-header {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 24px;
}

.ai-assistant-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    border-radius: 12px;
    color: white;
    flex-shrink: 0;
}

.ai-assistant-title {
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #ffffff;
    margin-bottom: 6px;
}

.ai-assistant-desc {
    font-size: 13px;
    color: #a3a3a3;
    line-height: 1.5;
}

.ai-assistant-input-wrapper {
    display: flex;
    gap: 12px;
    margin-bottom: 20px;
}

.ai-assistant-input {
    flex: 1;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 14px 20px;
    color: #ffffff;
    font-size: 14px;
    transition: all 0.2s ease;
}

.ai-assistant-input::placeholder {
    color: #737373;
}

.ai-assistant-input:focus {
    outline: none;
    border-color: #ef4444;
    background: rgba(255, 255, 255, 0.06);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.ai-assistant-generate-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

.ai-assistant-generate-btn:hover:not(:disabled) {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
    transform: translateY(-1px);
}

.ai-assistant-generate-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
}

.ai-quick-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.ai-quick-action-btn {
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    color: #d4d4d4;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
}

.ai-quick-action-btn:hover {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    margin-bottom: 48px;
}

@media (max-width: 1024px) {
    .dashboard-grid {
        grid-template-columns: 1fr;
    }
}

/* Dashboard Sections */
.dashboard-section {
    background: rgba(23, 23, 23, 0.4);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 24px;
}

.dashboard-section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
}

.dashboard-section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #ffffff;
}

.section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 6px;
    color: #ef4444;
}

.view-all-btn {
    padding: 6px 14px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: #a3a3a3;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.15s ease;
}

.view-all-btn:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 255, 255, 0.15);
    color: #ffffff;
}

/* Recent Projects */
.recent-projects-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.recent-project-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    width: 100%;
}

.recent-project-item:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(239, 68, 68, 0.3);
    transform: translateX(4px);
}

.recent-project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.04);
    border-radius: 10px;
    font-size: 20px;
    flex-shrink: 0;
}

.recent-project-info {
    flex: 1;
    min-width: 0;
}

.recent-project-title {
    font-size: 14px;
    font-weight: 500;
    color: #ffffff;
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.recent-project-meta {
    font-size: 12px;
    color: #737373;
}

.recent-project-arrow {
    color: #737373;
    flex-shrink: 0;
    transition: all 0.2s ease;
}

.recent-project-item:hover .recent-project-arrow {
    color: #ef4444;
    transform: translateX(4px);
}

/* Favorite Modules */
.favorite-modules {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 12px;
    min-height: 200px;
}

.favorite-module-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 24px 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
}

.favorite-module-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(239, 68, 68, 0.3);
    transform: translateY(-2px);
}

.favorite-module-icon {
    font-size: 28px;
    color: #ef4444;
}

.favorite-module-title {
    font-size: 13px;
    font-weight: 500;
    color: #d4d4d4;
}

.favorite-modules-empty {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px 24px;
    color: #737373;
    text-align: center;
}

.favorite-modules-empty svg {
    margin-bottom: 16px;
    opacity: 0.3;
}

.favorite-modules-empty p {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.05em;
}

/* Templates */
.templates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 12px;
}

.template-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 28px 20px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
}

.template-card:hover {
    background: rgba(239, 68, 68, 0.08);
    border-color: rgba(239, 68, 68, 0.3);
    transform: translateY(-2px);
}

.template-card svg {
    color: #ef4444;
}

.template-card span {
    font-size: 13px;
    font-weight: 500;
    color: #d4d4d4;
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px 24px;
    text-align: center;
    color: #737373;
}

.empty-state svg {
    margin-bottom: 16px;
    opacity: 0.3;
}

.empty-state p {
    font-size: 14px;
    font-weight: 500;
    color: #a3a3a3;
    margin-bottom: 6px;
}

.empty-state span {
    font-size: 12px;
    color: #737373;
}

/* Responsive */
@media (max-width: 768px) {
    .dashboard {
        padding: 32px 24px;
    }

    .dashboard-title {
        font-size: 40px;
    }

    .ai-assistant-input-wrapper {
        flex-direction: column;
    }

    .ai-assistant-generate-btn {
        width: 100%;
        justify-content: center;
    }

    .favorite-modules,
    .templates-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }
}