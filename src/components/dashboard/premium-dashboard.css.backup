/* ============================================================================
   Premium Dashboard - 2026 Dark Neo-Brutalist UI
   ============================================================================ */

.dashboard {
    min-height: 100vh;
    background: var(--neo-bg-main);
    padding: 48px 64px;
    color: var(--foreground);
    font-family: var(--font-inter);
}

/* Hero Section */
.dashboard-hero {
    margin-bottom: 48px;
    border-bottom: 4px solid var(--neo-accent-primary);
    padding-bottom: 32px;
}

.dashboard-title {
    font-size: 64px;
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 0.9;
    color: #ffffff;
    margin-bottom: 16px;
    text-transform: uppercase;
}

.dashboard-title-highlight {
    color: var(--neo-accent-primary);
    background: transparent;
    -webkit-text-stroke: 1px var(--neo-accent-primary);
    /* Optional outline effect */
}

.dashboard-subtitle {
    font-size: 16px;
    color: #a3a3a3;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* AI Assistant Card */
.ai-assistant-card {
    background: var(--neo-bg-card);
    border: 1px solid var(--neo-border-color);
    border-radius: 0;
    padding: 32px;
    margin-bottom: 48px;
    box-shadow: var(--neo-shadow-hard);
}

.ai-assistant-header {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 24px;
}

.ai-assistant-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--neo-accent-primary);
    border: 1px solid #000;
    border-radius: 0;
    color: #000;
    flex-shrink: 0;
    box-shadow: 2px 2px 0 0 #ffffff;
}

.ai-assistant-title {
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--neo-accent-primary);
    margin-bottom: 6px;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.ai-assistant-desc {
    font-size: 14px;
    color: #ffffff;
    line-height: 1.5;
}

.ai-assistant-input-wrapper {
    display: flex;
    gap: 0;
    /* Connected inputs in Brutalism often touch */
    margin-bottom: 24px;
    border: 1px solid var(--neo-border-color);
}

.ai-assistant-input {
    flex: 1;
    background: #000000;
    border: none;
    border-right: 1px solid var(--neo-border-color);
    border-radius: 0;
    padding: 16px 24px;
    color: #ffffff;
    font-size: 14px;
    font-family: var(--font-mono);
}

.ai-assistant-input::placeholder {
    color: #555;
    text-transform: uppercase;
}

.ai-assistant-input:focus {
    outline: none;
    background: #111;
    color: var(--neo-accent-primary);
}

.ai-assistant-generate-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 0 32px;
    background: var(--neo-accent-primary);
    border: none;
    border-radius: 0;
    color: #000000;
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.1s ease;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.ai-assistant-generate-btn:hover:not(:disabled) {
    background: #ffffff;
    color: #000000;
}

.ai-assistant-generate-btn:disabled {
    background: #333;
    color: #777;
    cursor: not-allowed;
}

.ai-quick-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
}

.ai-quick-action-btn {
    padding: 8px 16px;
    background: transparent;
    border: 1px solid #333;
    border-radius: 0;
    color: #777;
    font-size: 11px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.1s ease;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.ai-quick-action-btn:hover {
    color: #000;
    background: var(--neo-accent-primary);
    border-color: var(--neo-accent-primary);
    box-shadow: 2px 2px 0 0 #ffffff;
    transform: translate(-2px, -2px);
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    /* Larger gap for minimalism */
    margin-bottom: 48px;
}

@media (max-width: 1024px) {
    .dashboard-grid {
        grid-template-columns: 1fr;
    }
}

/* Dashboard Sections */
.dashboard-section {
    background: transparent;
    border: 1px solid var(--neo-border-color);
    border-radius: 0;
    padding: 0;
    /* Minimalist: let content breathe inside or stick to edges? */
}

/* Brutalist Header for Sections */
.dashboard-section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    border-bottom: 1px solid var(--neo-border-color);
    background: #111;
}

.dashboard-section-title {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #ffffff;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: #000;
    border: 1px solid #333;
    border-radius: 0;
    color: var(--neo-accent-primary);
}

.view-all-btn {
    padding: 6px 12px;
    background: transparent;
    border: 1px solid #333;
    border-radius: 0;
    color: #777;
    font-size: 10px;
    font-weight: 600;
    cursor: pointer;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.view-all-btn:hover {
    background: #fff;
    color: #000;
    border-color: #fff;
}

/* Recent Projects */
.recent-projects-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    /* Connected list items */
}

.recent-project-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px 24px;
    background: #0a0a0a;
    border-bottom: 1px solid var(--neo-border-color);
    cursor: pointer;
    transition: all 0.1s ease;
    text-align: left;
    width: 100%;
}

.recent-project-item:last-child {
    border-bottom: none;
}

.recent-project-item:hover {
    background: var(--neo-accent-primary);
}

.recent-project-item:hover .recent-project-title,
.recent-project-item:hover .recent-project-meta,
.recent-project-item:hover .recent-project-arrow {
    color: #000000;
}

.recent-project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: #000;
    border: 1px solid #333;
    border-radius: 0;
    font-size: 16px;
    flex-shrink: 0;
    color: #fff;
}

.recent-project-item:hover .recent-project-icon {
    border-color: #000;
}

.recent-project-info {
    flex: 1;
    min-width: 0;
}

.recent-project-title {
    font-size: 14px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: var(--font-mono);
}

.recent-project-meta {
    font-size: 11px;
    color: #777;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.recent-project-arrow {
    color: #333;
    flex-shrink: 0;
}

/* Favorite Modules */
.favorite-modules {
    padding: 24px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 16px;
}

.favorite-module-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding: 24px 16px;
    background: #0a0a0a;
    border: 1px solid var(--neo-border-color);
    border-radius: 0;
    cursor: pointer;
    transition: all 0.1s ease;
    text-align: center;
}

.favorite-module-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 0 var(--neo-accent-primary);
    border-color: var(--neo-accent-primary);
}

.favorite-module-icon {
    font-size: 24px;
    color: #ffffff;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 0;
}

.favorite-module-card:hover .favorite-module-icon {
    background: var(--neo-accent-primary);
    color: #000;
    border-color: #000;
}

.favorite-module-title {
    font-size: 12px;
    font-weight: 600;
    color: #aaa;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

.favorite-module-card:hover .favorite-module-title {
    color: #fff;
}

.favorite-modules-empty {
    padding: 48px;
    text-align: center;
    color: #555;
    font-family: var(--font-mono);
    font-size: 12px;
}

/* Templates */
.templates-grid {
    padding: 24px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 16px;
}

.template-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding: 24px 16px;
    background: #0a0a0a;
    border: 1px solid var(--neo-border-color);
    border-radius: 0;
    cursor: pointer;
    transition: all 0.1s ease;
    text-align: center;
}

.template-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 0 #ff00ff;
    /* Magenta shadow for templates */
    border-color: #ff00ff;
}

.template-card svg {
    color: #ffffff;
}

.template-card:hover svg {
    color: #ff00ff;
}

.solopreneur-card {
    border: 1px solid var(--neo-accent-primary);
    background: rgba(204, 255, 0, 0.05);
}

.solopreneur-card:hover {
    box-shadow: 4px 4px 0 0 var(--neo-accent-primary);
    border-color: var(--neo-accent-primary);
}

.solopreneur-card svg {
    color: var(--neo-accent-primary);
}

.template-card span {
    font-size: 12px;
    font-weight: 600;
    color: #aaa;
    text-transform: uppercase;
    font-family: var(--font-mono);
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px;
    text-align: center;
    color: #555;
    font-family: var(--font-mono);
}

/* Responsive */
@media (max-width: 768px) {
    .dashboard {
        padding: 24px;
    }

    .dashboard-title {
        font-size: 32px;
    }

    .ai-assistant-input-wrapper {
        flex-direction: column;
        border: none;
    }

    .ai-assistant-input {
        border: 1px solid #333;
        margin-bottom: 8px;
    }

    .ai-assistant-generate-btn {
        width: 100%;
        justify-content: center;
        padding: 16px;
    }
}

