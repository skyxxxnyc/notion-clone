    color: #e5e5e5;
}

.favorite-modules-empty {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 48px 24px;
    color: var(--clay-text-muted);
    text-align: center;
    background: var(--clay-bg-main);
    border-radius: 20px;
    box-shadow: var(--clay-shadow-in);
}

.favorite-modules-empty svg {
    margin-bottom: 16px;
    opacity: 0.3;
}

.favorite-modules-empty p {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.05em;
}

